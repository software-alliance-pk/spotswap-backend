<section id="account_section">
  <%= render :partial => "shared/sidebar" %>
  <div id="guidelines" class="main_side">
    <div id="top_header">
      <h2 class="mb-0">Guidelines</h2>
      <div class="header_side">
      <div class="dropdown" id="notify_dropDown">
        <button type="button" class="noti_btn input" data-bs-auto-close="outside" data-bs-toggle="dropdown">
          <%= image_tag "icon-bell.svg" %>
          <span><%=@notifications.count%></span>
        </button>
        <%= render 'shared/notifications', :locals => {:notifications => @notifications } %>
      </div>
      </div>
    </div>
    <div class="top_btn">
      <input type="submit" class="site_btn round" value="Save Changes" form="edit-policy-form"></input>
    </div>
    <div class="guide">
      <div class="row">
        <div class="col-md-3">
          <ul>
            <li>
              <a href="<%=terms_and_conditions_admins_guidelines_path%>">Terms & Condition</a>
            </li>
            <li>
              <a href="<%=privacy_policy_admins_guidelines_path%>" class="active">Privacy Policy</a>
            </li>
            <li>
              <a href="<%=faqs_admins_guidelines_path%>">FAQs</a>
            </li>
          </ul>
        </div>
        <div class="col-md-9">
          <% @privacy_policy.each do |policy|%>
            <%= form_with(model: @page, url: update_privacy_policy_admins_guidelines_path(id: policy.id), :id => 'edit-policy-form') do |f| %>
              <div class="details my-4">
                <div class="field">
                <%= f.rich_text_area :description, value: policy.content.body, required: true %>
                </div>
              </div>
              <div class="btn_blk justify-content-between">
                <input type="hidden" id="policy_id" name="policy_id" value=<%=policy.id%>>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</section>
<!-- account_section -->
<!-- Main Js -->
<script src="/assets/main.js"></script>
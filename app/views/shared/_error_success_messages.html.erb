<div id="error-message">
<p style="position:absolute; left:5%; font-weight:600; margin-top:130px;"><%= notice %></p>
	
</div>
<% if flash[:success_alert].present? %>
<div id="notice-message"><p style="position:absolute; left:5%; font-weight:600; margin-top:130px;"><%= flash[:success_alert] %></p></div>
<%end%>


<script type="text/javascript">
	setTimeout(function() {
  $('#error-message').hide();
}, 1000);

setTimeout(function() {
  $('#notice-message').hide();
}, 1000);





</script>



